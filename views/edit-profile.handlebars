<section class="profile-card">
  <div>
    <form class="bio" id="bio-form">
      <h3>Edit Profile Info</h3>
      <div class="bio-left">
        <label for="bio-info">Bio:</label>
        <input class="bio-info" type="text" id="bio-info" />
      </div>
      <div class="bio-right">
        <label for="name-info">Name:</label>
        <input type="text" id="name-info" />
      </div>
      <div class="bio-right">
        <label for="title-info">Title:</label>
        <input type="text" id="title-info" />
      </div>
      <div class="bio-right">
        <label for="main-info">Main Languages:</label>
        <input type="text" id="main-info" />
      </div>
      <div class="bio-right">
        <label for="to-learn-info">To Learn Languages:</label>
        <input type="text" id="to-learn-info" />
      </div>
      <div class="bio-center">
        <button type="submit">Add Info</button>
      </div>
    </form>
  </div>
</section>

