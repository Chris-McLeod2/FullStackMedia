<section class="profile-card">
    <div class="user-about">
        <h1>About</h1>
        {{user.about}}
        <div contenteditable="true">
            Bio
        </div>

          <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <div contenteditable="true" class="card">
            <img src="" alt="" style="width:100%">
            <h1>Name</h1>
            <p class="title">Title</p>
            <p>School</p>
            <a href="#"><i class="fa fa-dribbble"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-facebook"></i></a>
            <p><button>Contact</button></p>
        </div>

    </div>

    <div class="user-details">

        <div class="main-languages">
            <h2>Main Languages</h2>
            {{user.mainLanguages}}


            <label for="languages">Choose:</label>

            <select name="languages" id="languages">
                <option value="volvo">JavaScript</option>
                <option value="saab">HTML</option>
                <option value="mercedes">CSS</option>
                <option value="audi">Python</option>
            </select>

        </div>

        <div class="to-learn-languages">
            <h2>To Learn Languages</h2>
            {{user.learning}}

             <label for="languages">Choose:</label>


            <select name="languages" id="languages">
                <option value="volvo">JavaScript</option>
                <option value="saab">HTML</option>
                <option value="mercedes">CSS</option>
                <option value="audi">Python</option>
            </select>


        </div>

        <div class="reports">
            {{user.reports}}
            <h2>Reports</h2>
        </div>

    </div>
</section>

<script src="./"></script>